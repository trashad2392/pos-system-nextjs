{
  "name": "pos-system-nextjs",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "migrate": "npx prisma migrate dev",
    "dev:electron": "concurrently \"next dev\" \"wait-on http://localhost:3000 && xvfb-run electron .\"",
    "build:electron": "next build && electron-builder"
  },
  "build": {
    "appId": "com.yourname.possystem",
    "productName": "POS System",
    "files": [ "out/**/*", "main.js", "preload.js", "prisma/**/*" ],
    "directories": { "output": "dist" },
    "win": { "target": "nsis" }, "mac": { "target": "dmg" }
  },
  "dependencies": {
    "@mantine/core": "^7.11.1",
    "@mantine/hooks": "^7.11.1",
    "@prisma/client": "^5.17.0",
    "@tabler/icons-react": "^3.11.0",
    "dotenv": "^16.4.5",
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^3.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.39",
    "postcss-preset-mantine": "^1.15.0",
    "prisma": "^5.17.0",
    "wait-on": "^7.2.0"
  }
}
